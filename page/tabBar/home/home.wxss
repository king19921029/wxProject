/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.own-menu{ width: 80rpx; height:80rpx;  border-radius: 50%; background:#3197fb; line-height: 80rpx; text-align: center;}
.own-ico {
   color:#fff;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.pendingitems {
  display: inline;
}
.title {
  height: 85rpx;
  width: 100%;
  display: flex;
  line-height: 85rpx;
  align-items: center;
  background-color: #f5f5f5;
}
.title-ico{
  color: #999;
  font-size: 28rpx;
}
.pending {
  width:100%;
}
.pendingitems {
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  background-color: #fff;
}
.pendingitem {
  display: flex;
  width:33.3%;
  flex-direction: column;
  justify-content: center; /* 相对父元素水平居中 */
  align-items: center; /*  子元素相对父元素垂直居中 */
}
.itemIcon{
  display: flex;
  width: 90rpx;
  height:90rpx;  
  border-radius: 8rpx;
  background:#3197fb; 
  justify-content:center;
  align-items: center;
}
.itemColor{
  background:#fda255;
}
.titleFont{
  font-family: PingFangSC-Semibold, sans-serif;
  font-size: 28rpx;
  padding-left: 10rpx;
}
.titleContent{
  display: flex;
  justify-content:center;
  align-items: center;
  padding-left: 20rpx;
}
.message-count{
  display: flex;
  justify-content:center;
  align-items: center;
  position:absolute;
  top:60px;
  left: 85px;
  width: 16px;
  height: 16px;
  border-radius: 8px;
  background-color: red;
  color: white;
  font-size: 24rpx;
}
.itemText{
  display: flex;
}
.title-date{
  font-family: PingFangSC-Medium, sans-serif;
  font-size: 24rpx;
  padding-left:30rpx;
  color: #666;
}
.itemName{
  font-family: PingFangSC-Medium, sans-serif;
  font-size: 26rpx;
  padding-top: 10rpx;
}
.attentance{
  display: flex;
  flex-direction: column;
  height:60rpx;
  line-height: 60rpx;
  padding-bottom: 10rpx;
}
.attentanceContent{
  height: 150rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
background-color: #fff;
}
.attentanceItem{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  padding: 36px 0px;
}
.attentanceCome{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  font-family: PingFangSC-Bold, sans-serif;
  font-size: 24rpx;
  width: 90rpx;
  height:45rpx;
  background-color: #09bb07;
  color: white;
  margin-left: 50rpx;
}
.attentanceOut{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  font-family: PingFangSC-Bold, sans-serif;
  font-size: 24rpx;
  width: 90rpx;
  height:45rpx;
  background-color: #f1674f;
  color: white;
}
.attentanceTime{
  font-family: PingFangSC-Medium, sans-serif;
  font-size: 26rpx;
  margin-left: 30px;
  width: 120rpx;
}
.left{
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
}
.right{
  width:50%;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
}