  justify-content: space-between;
}
.select_header>view{
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
}
.tan{
  width: 30rpx;
  height: 30rpx;
  margin-left: 6rpx;
}
.tan_top{
  width: 25rpx;
