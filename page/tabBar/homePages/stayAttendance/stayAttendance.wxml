<view class='box'>
  <!-- header -->
  <view class='headers display_flex bg_fff'>
  
    <view class='left_box' catchtap='myWage'>
      <text class='{{headerBorder? "addBorder" : "" }}'>我的考勤</text>
      <view class='news_box {{headerBorder? "addBorder" : "" }}'>
        <view class='news'>3</view>
      </view>
    </view>
    <view class='center_border'></view>
    <view class='right_box' bindtap='youWage'>
      <text class='{{!headerBorder? "addBorder" : "" }}'>班组考勤</text>
      <view class='news_box {{!headerBorder? "addBorder" : "" }}'>
        <view class='news'>3</view>
      </view>
    </view>
    
  </view>
  <!-- 有考勤的时候 -->
  <block wx:if="{{1==1}}">
    <!-- 个人考勤 -->
    <view wx:if="{{headerBorder}}" class='content bg_fff'> 
      <view bindtap='perDetails' class='com_width list_box'>
        <view class='list'>
          <text class='list_title'>项目名称:</text>
          <text class='list_data'>北京三环新城项目</text>
        </view>

        <view class='list'>
          <text class='list_title'>劳务公司：</text>
          <text class='list_data'>北京三环新城项目有限公司</text>
        </view>

        <view class='list'>
          <text class='list_title'>班组：</text>
          <text class='list_data'>某某某</text>
        </view>

        <view class='list'>
          <text class='list_title'>姓名：</text>
          <text class='list_data'>某某某</text>
        </view>

        <view class='list'>
          <text class='list_title'>年月：</text>
          <text class='list_data'>2019年2月</text>
        </view>

        <view class='list'>
          <text class='list_title'>班数：</text>
          <text class='list_data'>80个</text>
        </view>
      </view>

      <view bindtap='confirmationTap' class='bg_blue com_footer_btn'>确认</view>
    </view>
    <!-- 班组考勤 -->
    <view wx:else class='content bg_fff'> 
      <view bindtap='classDetails' class='com_width list_box'>
        <view class='list'>
          <text class='list_title'>项目名称:</text>
          <text class='list_data'>北京三环新城项目</text>
        </view>

        <view class='list'>
          <text class='list_title'>劳务公司：</text>
          <text class='list_data'>北京三环新城项目有限公司</text>
        </view>

        <view class='list'>
          <text class='list_title'>班组：</text>
          <text class='list_data'>某某某</text>
        </view>

        <view class='list'>
          <text class='list_title'>年月：</text>
          <text class='list_data'>2019年2月</text>
        </view>

        <view class='list'>
          <text class='list_title'>班数：</text>
          <text class='list_data'>80个</text>
        </view>
      </view>

      <view bindtap='confirmationTap' class='bg_blue com_footer_btn'>确认</view>
    </view>
  </block>
 
  <!-- 没有list的时候 -->
  <view wx:else class='list_none'>
    <view>没有列表的时候</view>
    <image src="/image/none_record.png"></image>
    <view>您目前无共工资确认记录</view>
  </view>

  <!-- 浮层 -->
  <view hidden='{{blockIsShow}}' class='box_block'>
    <view class='bg_fff block_content'>
      <view class='block_title'>获取验证码</view>

      <view class='com_width block_code display_flex'>
        <input placeholder='输入验证码' type='number'></input>
        <view class='get_code'>获取验证码</view>
      </view>

      <view class='btn_box'>
        <view bindtap='no_tap' class='no'>取消</view>
        <view class='yes'>确认</view>
      </view>
    </view>
  </view>
</view>