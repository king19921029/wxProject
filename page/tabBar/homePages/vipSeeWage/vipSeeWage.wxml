    <view bindtap='peojectTap' class='{{titleStatus == 0 ? "addClass" : "" }}'>
      项目
      <view class='bottom_text'></view>
    </view>

     <view bindtap='attendanceTap' class='{{titleStatus == 1 ? "addClass" : "" }}'>
