<view class='box'>
  <view class='header bg_fff'>
    <view class='search_box com_width'>搜索</view>
    
    <view class='border_bottom'>
      <view class='select_header'>
        <view bindtap='peojectTap'>
          <text class='{{selectStatus == 1 ?"add_class":""}}'>项目</text>
          <image wx:if="{{selectStatus == 1}}" class='tan_top' src='/image/top_tan.png'></image>
          <image wx:else class='tan' src='/image/tan.png'></image>
        </view>
        <view bindtap='companyTap'>
          <text class='{{selectStatus == 2 ?"add_class":""}}'>劳务公司</text>
          <image wx:if="{{selectStatus == 2}}" class='tan_top' src='/image/top_tan.png'></image>
          <image wx:else class='tan' src='/image/tan.png'></image>
        </view>
        <view bindtap='classTap'>
          <text class='{{selectStatus == 3 ?"add_class":""}}'>班组</text>
          <image wx:if="{{selectStatus == 3}}" class='tan_top' src='/image/top_tan.png'></image>
          <image wx:else class='tan' src='/image/tan.png'></image>
        </view>
      </view>
    </view>
   
  </view>

  <!-- select -->
  <view wx:if="{{selectStatus > 0}}" class='select_box bg_fff'>
    <block wx:if="{{selectStatus == 1}}">
      <view>全部</view>
      <view>北京项目组1</view>
      <view>北京项目组2</view>
      <view>北京项目组3</view>
      <view>北京项目组4</view>
    </block>
    <block wx:if="{{selectStatus == 2}}">
      <view>全部</view>
      <view>劳务公司1</view>
      <view>劳务公司1</view>
      <view>劳务公司1</view>
      <view>劳务公司1</view>
    </block>
    <block wx:if="{{selectStatus == 3}}">
      <view>全部</view>
      <view>班组1</view>
      <view>班组1</view>
      <view>班组1</view>
      <view>班组1</view>
    </block>
  </view>

   <!-- list -->
  <view wx:else class='content bg_fff'>
    <view class='com_width list_box'>
      <view class='list'>
        <text class='list_title'>姓名:</text>
        <text class='list_data'>李先生111</text>
      </view>

      <view class='list'>
        <text class='list_title'>姓名:</text>
        <text class='list_data'>李先生</text>
      </view>

      <view class='list'>
        <text class='list_title'>姓名:</text>
        <text class='list_data'>李先生</text>
      </view>

      <view class='list'>
        <text class='list_title'>姓名:</text>
        <text class='list_data'>李先生</text>
      </view>
    </view>

    <view bindtap='goDetails' class='see_list'>查看详情</view>
  </view>

</view>