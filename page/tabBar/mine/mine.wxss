/* header */
.headers{
  align-items: center;
  padding: 30rpx 0;
}
.headers image{ 
  width: 120rpx;
  height: 120rpx;
  margin-right: 35rpx;
}
.user_name{
  font-weight: bold;
}
.user_msg{
  font-size: 26rpx;
  padding: 5rpx 0;
  align-items: center;
}
.user_msg icon{
  margin-right: 10rpx;
}
.tab_btn{
  margin-left: 10rpx;
  font-weight: bold;
}
.user_phone{
  margin-left: 30rpx;
}

/*  实名认证 */
.margin_top{
  margin-top: 26rpx;
}
.color_red{
  margin-left: 11%;
}
.com_right{
  color: #c7c7cc;
  margin-right: 30rpx;
}
/* list */
.color_3{
  color: #f1674f;
}
.color_4{
  color: #38c880;
}
.color_6{
  color: #f9b038;
}

.icon_box{
  width: 14%;
  display: flex;
  justify-content: center;
}
.com_icon{
  margin:0 0 0 4%;
}
.com_list_right{
  padding: 30rpx 0;
  width: 86%;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #efeff4;
}
.border_none{
  border: none;
}
/* 退出 */
.out{
  padding: 30rpx 0;
  text-align: center;
  margin-top: 60rpx;
}
/* 浮层 */
.box_block{
  font-size: 30rpx;
}
.block_view{
  width: 76%;
  border-radius: 10rpx;
  text-align: center;
}
.block_title{
  font-size: 34rpx;
  font-weight: 400;
  padding-top:50rpx;
}
.block_content{
  padding: 35rpx 0;
  font-size: 28rpx;
}
.later_on{
  padding: 30rpx 0;
  font-size: 34rpx;
  font-weight: 400;
  border-top: 1rpx solid #efeff4;
}
