<!-- 右侧热门和字母 -->
<view class="searchLetter touchClass">
  <!-- <view class="thishotText" bindtap="hotCity">
    <view style="margin-top:0;">当前</view>
    <view style="margin-top:0;">热门</view>
  </view> -->
  <view wx:for="{{searchLetter}}" style="color:#2ab4ff;font-size:20rpx;"
    wx:key="index" data-letter="{{item.name}}" catchtouchend="clickLetter" >
    {{item.name}}
  </view>
</view>

<!-- 选择字母弹窗 -->
<block wx:if="{{isShowLetter}}">
  <view class="showSlectedLetter">
    {{showLetter}}
  </view>
</block>

<!-- 搜索框 -->
<view class='search_box'>
  <view class='display_flex bg_fff'>
    <icon type='search' size='14'></icon>
    <input placeholder='输入城市名称进行搜索'></input>
  </view>
</view>

<!-- city列表 -->
<scroll-view class='scroll_view' scroll-y="true" style="height:{{winHeight}}px" bindscroll="bindScroll" 
 scroll-into-view="{{scrollTopId}}" scroll-top="{{scrollTop}}">
  <!--<view class="hotcity-common thisCity">当前选择城市</view>
  <view class="thisCityName">{{city}}</view>-->
  <view>
    <!-- <text class="hotcity hotcity-common">热门城市</text> -->
    <view class="weui-grids">
      <block wx:for-items="{{hotcityList}}" wx:key="">
        <view class="weui-grid" data-id="{{item.id}}" data-city="{{item.city}}" bindtap="bindHotCity" >
          <view class="weui-grid__label">{{item.city}}</view>
        </view>
      </block>
    </view>
  </view>
  <view class="selection" wx:for="{{cityList}}" wx:key="{{item.initial}}">
    <view class="item_letter"  id="{{item.initial}}">{{item.initial}}</view>
    <view class="item_city"  wx:for="{{item.cityInfo}}" wx:key="" wx:for-item="ct" data-id="{{ct.id}}" data-city="{{ct.city}}" bindtap="bindCity">
      {{ct.city}}
    </view>
  </view>
</scroll-view>