<view class='box'>
  <view class='header'>工资发放到个人银行卡，请您务必使用有效银行卡</view>
  <view class='com_width msg color_gray'>请输入银行卡号</view>
  <view class='border_t_b bg_fff'>
    <view class='card_num'>
      <text class='num'>银行卡号</text>
      <input bindinput='getUserIdCardNumber' data-types="0" class='card_input' placeholder='请输入银行卡号' value='{{bankData.bankCardNum}}'></input>
      <!-- <text class='color_gray fa fa-camera'></text> -->
    </view>
  </view>
  <!-- 信息 -->
  <view class='com_width msg color_gray'>请输入银行信息</view>
  <view class='border_t_b bg_fff'>
    <view class='card_num name_card'>
      <text class='com_titles'>姓名</text>
      <input data-types="1" bindinput='getInputVal' class='com_input' placeholder='请输入姓名' value='{{bankData.userName}}'></input>
    </view>
     <view class='card_num'>
      <text class='com_titles'>开户行</text>
      <input data-types="2" bindinput='getInputVal' class='com_input' placeholder='开户行' value='{{bankData.bankName}}'></input>
    </view>
  </view>
  <!-- 下一步 -->
  <view wx:if="{{!bankData.bankCardNum}}" bindtap='next' class='com_footer_btn bg_blue'>
    下一步
  </view>
  <view wx:else bindtap='untieTap' class='com_footer_btn bg_blue'>
    解绑
  </view>

</view>