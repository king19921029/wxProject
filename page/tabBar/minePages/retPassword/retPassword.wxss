.header{
  padding:45rpx 0 25rpx 0;
}
.phone{
  font-size: 32rpx;
  font-weight: 400;
  padding-bottom: 20rpx;
}
.content{
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  font-size: 28rpx;
  line-height: 1;
}
.content input{
  width: 70%;
  text-indent: 30rpx;
  padding: 25rpx 0;
  border-right: 1px solid #e5e5e5;
}
button::after{
  border:none;
}
button{
  width: 30%;
  padding: 0;
  margin: 0;
  line-height: 1;
  background: #fff;
  font-size: 30rpx;
}
