<view class='box'>
   <!-- header -->
  <view class='headers display_flex bg_fff'>
  
    <view class='left_box' catchtap='myProject'>
      <text class='{{headerBorder? "addBorder" : "" }}'>我管理的项目</text>
    </view>
    <view class='center_border'></view>
    <view class='right_box' bindtap='youProject'>
      <text class='{{!headerBorder? "addBorder" : "" }}'>我加入的项目</text>
    </view>
    
  </view>
  <!-- select -->
  <view class='border_bottom bg_fff border_top'>
    <view class='select_header'>
      <view bindtap='peojectTap'>
        <text class='{{selectStatus == 1 ?"add_class":""}}'>项目筛选</text>
        <image wx:if="{{selectStatus == 1}}" class='tan_top' src='/image/top_tan.png'></image>
        <image wx:else class='tan' src='/image/tan.png'></image>
      </view>
     
      <view bindtap='classTap'>
        <text class='{{selectStatus == 2 ?"add_class":""}}'>班组名称</text>
        <image wx:if="{{selectStatus == 2}}" class='tan_top' src='/image/top_tan.png'></image>
        <image wx:else class='tan' src='/image/tan.png'></image>
      </view>
    </view>
  </view>
  <!-- selectbox -->
  <view wx:if="{{selectStatus > 0}}" class='select_box bg_fff'>
    <block wx:if="{{selectStatus == 1}}">
      <view>全部</view>
      <view>北京项目组1</view>
      <view>北京项目组2</view>
      <view>北京项目组3</view>
      <view>北京项目组4</view>
    </block>

    <block wx:if="{{selectStatus == 2}}">
      <view>全部</view>
      <view>班组1</view>
      <view>班组2</view>
      <view>班组3</view>
      <view>班组4</view>
    </block>
  </view>

  <!-- 我加入的项目 -->
  <view wx:if="{{!headerBorder}}" class='my_add_project'>
    <view class='content bg_fff' bindtap='dayTap'>
      <view class='display_flex com_width com_list'>
        <text class='status_text bg_gray'>今日上班</text>
        <view class='big_font'>中间三局铁路项目部</view>
      </view>

      <view class='com_width com_list'>
        <text class='color_gray'>项目所在地：</text> <text>北京三环某个街道</text>
      </view>

      <view class='com_width com_list'>
        <text class='color_gray'>劳务公司：</text> <text>北京三环某个公司</text>
      </view>

      <view class='com_width com_list'>
        <text class='color_gray'>所在班组：</text> <text>霍志明班组</text>
      </view>

      <view class='com_width com_list'>
        <text class='color_gray'>劳动合同：</text> <text>合同未上传</text>
      </view>

      <view class='com_width com_list'>
        <text class='color_gray'>安全考试：</text> <text>通过</text>
      </view>

      <view class='display_flex btn_box'>
        <view class='bg_blue'>今日上班</view>
      </view>
    </view>
  </view>

  <!-- 我管理的项目 -->
  <view wx:else class='my_project'>
    <view class='content bg_fff'>
      <view class='display_flex com_width com_list'>
        <view class='big_font'>中间三局铁路项目部</view>
      </view>

      <view class='com_width com_list'>
        <text class='color_gray'>项目所在地：</text> <text>北京三环某个街道</text>
      </view>

      <view class='com_width com_list'>
        <text class='color_gray'>劳务公司：</text> <text>北京三环某个公司</text>
      </view>

      <view class='com_width com_list'>
        <text class='color_gray'>所在班组：</text> <text>霍志明班组</text>
      </view>

      <view bindtap='addTap' class='display_flex btn_box'>
        <view class='bg_blue'>添加人员</view>
      </view>
    </view>
  </view>
  
</view>